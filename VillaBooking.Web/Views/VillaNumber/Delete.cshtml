@model VillaNumber
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Villa Number</h2>
            </div>
        </div>
    </div>
    @*card body...*@
    <div class="card-body border p-4">
        <form method="post" class="row">
            <div class="p-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.villa.Name" readonly class="form-control border shadow"/>
                    <label asp-for="@Model.villa.Name" class="ms-2"></label>
                    <span asp-validation-for="@Model.villa.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.Villa_Number" readonly class="form-control border shadow" />
                    <label asp-for="@Model.Villa_Number" class="ms-2"></label>
                    <span asp-validation-for="@Model.Villa_Number" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.SpecialDetails" readonly class="form-control border shadow" />
                    <label asp-for="@Model.SpecialDetails" class="ms-2"></label>
                    <span asp-validation-for="@Model.SpecialDetails" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-check-circle"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="VillaNumber" asp-action="index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{
                <partial name="_ValidationScriptsPartial" />
    }
}